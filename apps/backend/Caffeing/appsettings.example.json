{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "your-256-bit-key-here", // Replace with your actual 256-bit key
    "Issuer": "com.example", // Example Issuer
    "Audience": "com.example.app", // Example Audience
    "ExpiresInMinutes": 60
  },
  "Database": {
    "Provider": "PostgreSql", // Change as needed: SqlServer, PostgreSql, MySql
    "Connection": {
      "DataSource": "localhost", // Example DataSource (usually the DB host)
      "InitialCatalog": "sample_db", // Example database name
      "UserId": "your_user", // Replace with your actual database user
      "Password": "your_password", // Replace with your actual password
      "Pooling": "true",
      "MaxPoolSize": "100",
      "ConnectTimeout": "30"
    }
  }
}
